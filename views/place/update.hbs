<h1>Update {{place.name}}</h1>

<div id="map"></div>

<form method="POST">
  <label for="input-name">Place Name</label>
  <input id="input-name" type="text" name="name" placeholder="Name" value="{{place.name}}" />

  <label for="input-type">Type of place</label>
<select id="input-type" type="select" name="type" value="{{place.type}}">
  <option value="coffee_shop">Coffe Shop</option>
  <option value="bookstore" >Bookstore</option>
</select>

  <label for="input-latitude">Place Latitude</label>
  <input id="input-latitude" type="number" name="latitude" placeholder="Latitude" min="-90" max="90" step="any" value="{{place.location.coordinates.[0]}}"/>

  <label for="input-longitude">Place Longitude</label>
  <input id="input-longitude" type="number" name="longitude" placeholder="longitude" min="-180" max="180" step="any" value="{{place.location.coordinates.[1]}}"/>

  <button>Update {{place.name}}</button>
</form>
